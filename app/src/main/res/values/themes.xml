<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stonks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColorHint">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyBotton" parent="@style/TextAppearance.AppCompat.Large"/>
    <style name="Theme.ListItem.Ticker" parent="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>
    <style name="Theme.ListItem.CompanyName" parent="@style/TextAppearance.AppCompat.Small"/>
    <style name="Theme.ListItem.Price" parent="@style/TextAppearance.AppCompat.Subhead"/>

    <style name="Theme.Stonks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Stonks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Stonks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarLayoutStile" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView"/>

</resources>